@model Producer

<div class="container">
    <h2 class="h2">Delete Producer</h2>
    <div class="alert alert-danger" role="alert">
        <strong>Warning! </strong> This will also delete all products registered to @Model.Name!
    </div>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ProducerId" method="post" enctype="multipart/form-data"
        class="form-inline">

        <input type="hidden" asp-for="ProducerId" />
        <div class="form-group">
            <label asp-for="Name"></label><span class="text-danger">*</span>
            <input asp-for="Name" class="form-control" style="width: fit-content;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label><span class="text-danger">*</span>
            <input asp-for="Address" class="form-control" style="width: fit-content;" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <p>
            <a asp-action="Table" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Go Back</a>
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
        </p>
    </form>
</div>

@model IEnumerable<Product>

<h1>List of Products Registered (@ViewBag.CurrentViewName View)</h1>
<a href="/Product/Table">Table View</a>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div>
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                <div>
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="text-start">
                            <a asp-asp-controller="Item" asp-action="Details" asp-route-id="@product.ProductId">@product.Name</a>
                        </h5>
                        <h5 class="text-nowrap">
                            @product.Price.ToString("0.00 NOK")
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

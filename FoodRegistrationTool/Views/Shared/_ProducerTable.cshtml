@model IEnumerable<Producer>

@foreach (var producer in Model)
{
    <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 20px;">
    <div class="container">
        <h5>@producer.Name</h5>
        <p>@producer.Address</p>
        <div>
            <partial name="_ProcerProductTable" model="producer.Products"></partial>
        </div>
    </div>
</div>
}

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Address</th>
        <th>Actions</th>
    </tr>
    @foreach (var producer in Model)
    {
        <tr>
            <td>@producer.ProducerId</td>
            <td>@producer.Name</td>
            <td>@producer.Address</td>
            <td>
                @if (@producer.Products != null)
                {
                    <p>@string.Join(", ", @producer.Products.Select(product => $"Product{product.ProductId}"))</p>
                }
            </td>
        </tr>
    }
</table>

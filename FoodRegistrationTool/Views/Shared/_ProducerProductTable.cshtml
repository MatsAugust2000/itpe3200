@model IEnumerable<Product>

<table class="table table-striped table-hover" style="max-width: 1200px;">
    <tr class="table-header">
        <th>Image</th>
        <th>Product</th>
        <th>Category</th>
        <th>NutriScore</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>
                <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"><img
                        src="@product.ImageUrl" style="max-height: 50px;" /></a>
            </td>
            <td>
                <a asp-area="" asp-controller="Product" asp-action="Details"
                    asp-route-id="@product.ProductId">@product.Name</a>
            </td>
            <td>
                <a asp-area="" asp-controller="Product" asp-action="Details"
                    asp-route-id="@product.ProductId">@product.Category</a>
            </td>
            <td>
                <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"><span
                        class="nutrition-score" data-score="@product.NutriScore">@product.NutriScore</span></a>
            </td>
        </tr>
    }
</table>
@model IEnumerable<Product>

<div class="container" style="margin-top: 10px;">
    <table class='table table-striped'>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Nutrition (per 100g/ml)</th>
            <th><a href="https://pmc.ncbi.nlm.nih.gov/articles/PMC9421047/">Nutrition Score</a></th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>
                    <a asp-controller="Product"
                       asp-action="Details" 
                       asp-route-id="@product.ProductId">@product.Name</a>
                </td>
                <td>@product.Category</td>
                <td>@product.Nutrition</td>
                <td>
                    <span class="nutrition-score" data-score="@product.NutriScore">@product.NutriScore</span>
                </td>
                <td>@product.Price.ToString("0.00 NOK")</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No img</span>
                    }                
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@product.ProductId">Update</a>
                    <a asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>

                </td>
            </tr>
        }
    </table>
    <p>
        <a class="btn btn-primary" 
           asp-controller="Product" 
           asp-action="Create">Register New Product</a>
    </p>
</div>

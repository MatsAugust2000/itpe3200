@model IEnumerable<Product>

<div class="container" style="margin-top: 10px;">
    <table class='table table-striped'>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>
                    <a asp-controller="Product"
                       asp-action="Details" 
                       asp-route-id="@product.ProductId">@product.Name</a>
                </td>
                <td>@product.Category</td>
                <td>@product.Price.ToString("0.00 NOK")</td>
                <td>@product.Description</td>
                <td>
                    <img src="@product.ImageUrl" alt="Product Image" style="max-width: 80px; max-height: 80px;" />
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@product.ProductId">Update (in progress)</a>
                    <a asp-action="Delete" asp-route-id="@product.ProductId">Delete (in progress)</a>

                </td>
            </tr>
        }
    </table>
    <p>
        <a class="btn btn-primary" 
           asp-controller="Product" 
           asp-action="Create">Register New Product</a>
    </p>
</div>
